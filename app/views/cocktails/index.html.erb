<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(-125deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://im0-tub-com.yandex.net/i?id=c75ae09d7b2deac19c85e2293525d999&n=13');">
  <div class="banner-content">
  <h3>Drinks with a view</h3>
  <%= render "cocktails/search", cocktail: @cocktail, dose: @dose %>
</div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
